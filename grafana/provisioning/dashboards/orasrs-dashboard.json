{
  "dashboard": {
    "id": null,
    "title": "OraSRS Service Dashboard",
    "tags": ["orasrs", "monitoring"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Total Requests",
        "type": "stat",
        "gridPos": { "x": 0, "y": 0, "w": 6, "h": 4 },
        "targets": [
          {
            "expr": "orasrs_requests_total",
            "legendFormat": "Total Requests"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "min": 0,
            "max": 100,
            "color": {
              "mode": "palette-classic"
            }
          }
        }
      },
      {
        "id": 2,
        "title": "Requests by Status Code",
        "type": "graph",
        "gridPos": { "x": 6, "y": 0, "w": 6, "h": 4 },
        "targets": [
          {
            "expr": "orasrs_requests_by_status_code_total",
            "legendFormat": "{{status_code}}"
          }
        ]
      },
      {
        "id": 3,
        "title": "Average Response Time",
        "type": "stat",
        "gridPos": { "x": 12, "y": 0, "w": 6, "h": 4 },
        "targets": [
          {
            "expr": "orasrs_response_time_seconds",
            "legendFormat": "Avg Response Time (s)"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "color": {
              "mode": "palette-classic"
            }
          }
        }
      },
      {
        "id": 4,
        "title": "Active Connections",
        "type": "graph",
        "gridPos": { "x": 18, "y": 0, "w": 6, "h": 4 },
        "targets": [
          {
            "expr": "orasrs_active_connections",
            "legendFormat": "Active Connections"
          }
        ]
      },
      {
        "id": 5,
        "title": "Request Rate by Endpoint",
        "type": "graph",
        "gridPos": { "x": 0, "y": 4, "w": 12, "h": 6 },
        "targets": [
          {
            "expr": "rate(orasrs_requests_by_endpoint_total[5m])",
            "legendFormat": "{{endpoint}}"
          }
        ],
        "yAxes": [
          {
            "label": "Requests/sec",
            "show": true
          }
        ]
      },
      {
        "id": 6,
        "title": "Response Time Percentiles",
        "type": "graph",
        "gridPos": { "x": 12, "y": 4, "w": 12, "h": 6 },
        "targets": [
          {
            "expr": "orasrs_response_time_p95_seconds",
            "legendFormat": "P95 Response Time"
          },
          {
            "expr": "orasrs_response_time_p99_seconds",
            "legendFormat": "P99 Response Time"
          }
        ],
        "yAxes": [
          {
            "label": "Response Time (s)",
            "show": true
          }
        ]
      }
    ],
    "time": {
      "from": "now-15m",
      "to": "now"
    },
    "timepicker": {
      "time_options": ["5m", "15m", "1h", "6h", "12h", "24h", "2d", "7d", "30d"]
    },
    "templating": {
      "list": []
    },
    "annotations": {
      "list": []
    },
    "refresh": "5s",
    "schemaVersion": 17,
    "version": 0,
    "links": [],
    "gnetId": null
  }
}